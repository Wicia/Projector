<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="pl.wicia.projector.database.entities.pattern.PatternEntity" 
          table="TAB_PATTERN_ELEMENTS">
      <meta attribute="class-description">
         This class contains definition of elements patterns. 
      </meta>
      <id name="id" type="long" column="id">
         <generator class="native"/>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="necessary" column="necessary" type="string"/>
   </class>
   
    <query name="findPatternByName">
        FROM PatternEntity WHERE name = :name
    </query>
    
    <query name="findPatternByID">
        FROM PatternEntity WHERE id = :id
    </query>
   
</hibernate-mapping>